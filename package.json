{
  "name": "eloquium",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.6",
  "workspaces": ["apps/*", "packages/*", "services/*"],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "cd services/api && npx prisma migrate dev",
    "db:seed": "cd services/api && npx prisma db seed",
    "db:studio": "cd services/api && npx prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.4.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "@types/node": "^20.0.0"
  },
  "engines": { "node": ">=20.0.0" }
}
